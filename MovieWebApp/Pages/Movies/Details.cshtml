@page "{id}"
@model MovieWebApp.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-6">
        @await Html.PartialAsync("_MovieDetails",Model)
    </div>
    
    <div class="col-6">
        @await Component.InvokeAsync("GenreCount",new {genre = Model.Movie.Genre});
    </div>
</div>


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie?.ID" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-warning">Back to List</a>
</div>
